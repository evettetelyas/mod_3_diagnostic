<center>
	<% if @members.count > 0 %>
		<h1><%= pluralize(@members.count, "#{@members.first.house} Member") %></h1>

		<% @members.each do |member| %>
			<h2 class="name">✨ <%= member.name %> ✨</h2>
			<p class="house"><i>House: <%= member.house %></i></p>
			<% if member.role %>
				<p class="role"><i>Role: <%= member.role %></i></p>
			<% end %>
			<% if member.patronus %>
				<p class="patronus"><i>Patronus: <%= member.patronus %></i></p>
			<% end %><br>
		<% end %>
	<% else %>
	  <h1>This house has no members. wah.</h1>
	<% end %>
</center>